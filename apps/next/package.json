{
  "name": "next",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache --cache-location ./node_modules/.cache/eslint/",
    "lint:fix": "eslint . --fix --cache --cache-location ./node_modules/.cache/eslint/",
    "lint:styles": "tsx src/scripts/check-unused-styles.ts",
    "format": "prettier --write . && yarn lint:fix",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run src/**/*.spec.{ts,tsx}",
    "test:integration": "vitest run src/**/*.integration.spec.{ts,tsx}",
    "test:coverage": "vitest --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "clean": "rm -rf .next node_modules/.cache coverage"
  },
  "dependencies": {
    "@grupo-ser/utils": "workspace:*",
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.90.9",
    "@tanstack/react-query-devtools": "^5.90.2",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "next": "^16.0.3",
    "react": "^19.2.0",
    "react-hook-form": "^7.66.0",
    "reshaped": "^3.8.8",
    "sass": "^1.94.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@grupo-ser/eslint": "workspace:*",
    "@grupo-ser/types": "workspace:*",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}

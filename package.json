{
  "name": "grupo-ser-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "strapi",
    "next"
  ],
  "packageManager": "yarn@4.9.4",
  "scripts": {
    "dev": "turbo run dev",
    "dev:strapi": "turbo run dev --filter=cms",
    "dev:next": "turbo run dev --filter=next",
    "build": "turbo run build",
    "build:strapi": "turbo run build --filter=cms",
    "build:next": "turbo run build --filter=next",
    "start": "turbo run start",
    "start:strapi": "turbo run start --filter=cms",
    "start:next": "turbo run start --filter=next",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\""
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0 <=22.x.x",
    "yarn": ">=4.0.0"
  }
}

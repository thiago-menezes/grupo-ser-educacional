{
  "name": "grupo-ser-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "cms",
    "frontend"
  ],
  "packageManager": "yarn@4.9.4",
  "scripts": {
    "dev": "turbo run dev",
    "dev:cms": "turbo run dev --filter=cms",
    "dev:frontend": "turbo run dev --filter=frontend",
    "build": "turbo run build",
    "build:cms": "turbo run build --filter=cms",
    "build:frontend": "turbo run build --filter=frontend",
    "start": "turbo run start",
    "start:cms": "turbo run start --filter=cms",
    "start:frontend": "turbo run start --filter=frontend",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\""
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.3.3",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0 <=22.x.x",
    "yarn": ">=4.0.0"
  }
}

{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Curso / Detalhes",
    "description": "Academic courses offered by institutions"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nome": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "sobre": {
      "type": "text",
      "required": true
    },
    "descricaoSegundaria": {
      "type": "richtext"
    },
    "curriculum": {
      "type": "richtext"
    },
    "instituicao": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::institution.institution",
      "inversedBy": "cursos"
    },
    "capa": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "corpo_docente": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::corpo-docente.corpo-docente",
      "mappedBy": "curso"
    }
  }
}

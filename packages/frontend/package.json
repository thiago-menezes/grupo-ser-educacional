{
  "name": "@grupo-ser/frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles/*": "./dist/styles/*"
  },
  "scripts": {
    "build": "tsc && npm run copy:styles",
    "copy:styles": "mkdir -p dist/styles && cp -r src/styles/* dist/styles/ 2>/dev/null || true",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache --cache-location ./node_modules/.cache/eslint/",
    "lint:fix": "eslint . --fix --cache --cache-location ./node_modules/.cache/eslint/",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "dependencies": {
    "@grupo-ser/utils": "workspace:*",
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.90.9",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "react-hook-form": "^7.66.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@grupo-ser/eslint": "workspace:*",
    "@grupo-ser/types": "workspace:*",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  },
  "peerDependencies": {
    "next": "^16.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reshaped": "^3.8.0"
  }
}

{
  "name": "@grupo-ser/bff",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache --cache-location ./node_modules/.cache/eslint/",
    "lint:fix": "eslint . --fix --cache --cache-location ./node_modules/.cache/eslint/",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "dependencies": {
    "@grupo-ser/utils": "workspace:*"
  },
  "devDependencies": {
    "@grupo-ser/eslint": "workspace:*",
    "@grupo-ser/types": "workspace:*",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "prettier": "^3.7.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}

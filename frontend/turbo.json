{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_API_BASE_URL",
        "STRAPI_URL",
        "API_MOCK_BASE_URL",
        "APP_BASE_URL",
        "AUTH_URL",
        "AUTH_SECRET",
        "AUTH_TRUST_HOST",
        "AUTH0_ISSUER",
        "AUTH0_ID",
        "AUTH0_SECRET"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "check-types": {
      "dependsOn": ["^build"],
      "outputs": ["tsconfig.tsbuildinfo"]
    }
  }
}

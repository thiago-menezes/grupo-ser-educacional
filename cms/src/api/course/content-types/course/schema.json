{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": "Academic courses offered by institutions"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "text"
    },
    "detailedDescription": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal"
    },
    "duration": {
      "type": "string"
    },
    "sector": {
      "type": "enumeration",
      "enum": [
        "saude",
        "tecnologia",
        "gestao",
        "educacao",
        "direito",
        "engenharia",
        "outros"
      ]
    },
    "level": {
      "type": "enumeration",
      "enum": [
        "tecnico",
        "graduacao",
        "pos-graduacao",
        "extensao",
        "curso-livre"
      ]
    },
    "modality": {
      "type": "enumeration",
      "enum": [
        "presencial",
        "ead",
        "hibrido"
      ]
    },
    "curriculum": {
      "type": "richtext"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "workload": {
      "type": "integer"
    },
    "enrollmentOpen": {
      "type": "boolean",
      "default": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "institution": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::institution.institution",
      "inversedBy": "courses"
    }
  }
}
